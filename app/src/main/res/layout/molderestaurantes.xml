<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/nombrelistarestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.05"
        android:textSize="27dp"
        android:textStyle="bold"
        android:text="RESTAURANTE OREGANO"
        />

    <ImageView
        android:id="@+id/fotolistarestaurantes"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/restauranteoregano"
        app:layout_constraintTop_toBottomOf="@+id/nombrelistarestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        app:layout_constraintVertical_bias="0.1"
        />

    <TextView
        android:id="@+id/preciolistarestaurantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@+id/fotolistarestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="$250.000 COP - $450.000 COP"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/telefonolistarestaurante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/preciolistarestaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:layout_constraintHorizontal_bias="0.5"
        android:text="@string/Telefono"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/platorecomendado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/telefonolistarestaurante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintHorizontal_bias="0.1"
        android:text="@string/Platorecomendado"
        android:textSize="19dp"
        android:textStyle="bold"
        />

        <TextView
            android:id="@+id/platorecomendadotexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Platorecomendadotexto"
            android:textSize="19dp"
            app:layout_constraintTop_toBottomOf="@id/platorecomendado"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
        android:id="@+id/nombreplatorecomendadotexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/telefonolistarestaurante"
        app:layout_constraintStart_toEndOf="@id/platorecomendado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.09"
        android:text="Filet Mignon"
        android:textSize="20dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>