<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".Acerca">

    <TextView
        android:id="@+id/minombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lina María
                      RÍOS GÓMEZ"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.07"
        android:textSize="40dp"
        android:textColor="@color/color6" />

    <ImageView
        android:id="@+id/imagenlina"
       android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="@+id/minombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/fotolina"
        app:layout_constraintHorizontal_bias="0.01"
       app:layout_constraintVertical_bias="0.40"/>

    <TextView
        android:id="@+id/resenalina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resenaLina"
        app:layout_constraintTop_toTopOf="@+id/minombre"
        app:layout_constraintStart_toStartOf="@+id/imagenlina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintHorizontal_bias="0.99"
        android:textSize="14dp"
        android:textColor="@color/color6" />

    <TextView
        android:id="@+id/correolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="linarios512@hotmail.com"
        app:layout_constraintTop_toTopOf="@+id/minombre"
        app:layout_constraintStart_toStartOf="@+id/imagenlina"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.65"
        app:layout_constraintHorizontal_bias="0.5"
        android:textSize="25dp"
        android:textColor="@color/color6" />
    
    <TextView
        android:id="@+id/linkgit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="linarios512"
        app:layout_constraintTop_toTopOf="@+id/imagenlina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintHorizontal_bias="0.5"
        android:textSize="35dp"
        android:textColor="@color/color6" />







</androidx.constraintlayout.widget.ConstraintLayout>