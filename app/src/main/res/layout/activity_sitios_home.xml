<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color1"
    tools:context=".sitiosHome">


    <ImageView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/sitiosturisticosbanner"
        android:background="@color/color6"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintWidth="330dp"
        app:layout_constraintHeight="100dp"
        />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/resenasitios"
        app:layout_constraintVertical_bias="0.09"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:textSize="16dp"
        android:textColor="@color/color6"
        />
    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/tourpiedraok"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth="600dp"
        app:layout_constraintHeight="90dp"
        />

    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagen1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/tourmonjesok"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth="570dp"
        app:layout_constraintHeight="90dp"
        />

    <ImageView
        android:id="@+id/imagen3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagen2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/tourpueblook"
        app:layout_constraintVertical_bias="0.06"
        app:layout_constraintWidth="570dp"
        app:layout_constraintHeight="90dp"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boton"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="385dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boton"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="490dp"
        tools:ignore="MissingConstraints" />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boton"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="590dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonsitios"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/color6"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/imagen3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="200dp"
        app:layout_constraintVertical_bias="0.5"
        android:text="¡Ver más!"
        android:textSize="22dp"
        android:gravity="center"
        />





</androidx.constraintlayout.widget.ConstraintLayout>