<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lemonchiffon"
    tools:context=".HotelesHome">


    <ImageView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/hotelesbanner"
        android:background="@color/color6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight="100dp"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077"
        app:layout_constraintWidth="330dp" />

    <TextView
        android:id="@+id/descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/resenahoteles"
        app:layout_constraintVertical_bias="0.09"
        android:textAlignment="center"
        android:layout_marginHorizontal="30dp"
        android:textSize="16dp"
        android:textColor="@color/color6"
        />

    <ImageView
        android:id="@+id/imagen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/descripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hotelluxeok"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth="570dp"
        app:layout_constraintHeight="90dp"
        />

    <ImageView
        android:id="@+id/imagen2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagen1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hotelglampingok"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth="570dp"
        app:layout_constraintHeight="90dp"
        />

    <ImageView
        android:id="@+id/imagen3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imagen2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/hotelmansionok"
        app:layout_constraintVertical_bias="0.06"
        app:layout_constraintWidth="570dp"
        app:layout_constraintHeight="90dp"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boton"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="375dp" />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boton"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="475dp" />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/boton"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="575dp" />


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@color/color6"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/imagen3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="200dp"
        app:layout_constraintVertical_bias="0.5"
        android:text="¡Ver más!"
       android:textSize="22dp"
        android:gravity="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>